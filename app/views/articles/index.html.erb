<div class="index">
  <div class="container">
    <% @articles.each do |article| %>
      <div class="row">
        <div class="col-xs-12 col-md-offset-2 col-md-8">
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= article.content %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
