<div class="new">
  <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-offset-2 col-md-8">
          <%= form_for (@article) do |f| %>

            <%= f.label :title %>
            <%= f.text_field :title , class: "form-control" %>

            <%= f.label :content , id: "content-label" %>
            <%= f.text_area :content, class: "form-control", id: "content-input"%>

            <%= f.submit :submit, class: "btn btn-success" , id: "submit-button" %>
          <% end %>
        </div>
      </div>
  </div>
</div>
